<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/background_fill_secondary50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_project"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/image_chilli"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_project"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_regular"/>

                <TextView
                    android:id="@+id/tv_desc_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_project"
                    android:textSize="14sp"
                    android:textColor="@color/nt30"
                    android:fontFamily="@font/nunito_regular"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>